{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/microservice-email/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{MachineName}] [{ThreadId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Database": {
    "DefaultConnection": "Host=production-db;Port=5432;Database=microservice_email;",
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "Minio": {
    "Endpoint": "production-minio:9000",
    "AccessKey": "",
    "SecretKey": "",
    "UseSSL": true,
    "AttachmentsBucket": "attachments",
    "TemplatesBucket": "templates"
  },
  "Smtp": {
    "Host": "production-smtp",
    "Port": 587,
    "Username": "",
    "Password": "",
    "EnableSsl": true,
    "DefaultSenderEmail": "noreply@example.com",
    "DefaultSenderName": "Email Service",
    "MaxRetryAttempts": 3,
    "RetryDelayMilliseconds": 1000
  },
  "RabbitMq": {
    "HostName": "production-rabbitmq",
    "Port": 5672,
    "Username": "",
    "Password": "",
    "VirtualHost": "/",
    "EmailQueueName": "email-queue",
    "TemplatedEmailQueueName": "templated-email-queue",
    "UseSsl": true
  },
  "Prometheus": {
    "Enabled": true,
    "MetricsEndpoint": "/metrics",
    "AllowedHosts": ["localhost", "127.0.0.1", "prometheus"],
    "IncludeHttpMetrics": true,
    "IncludeHostLabel": true,
    "SuppressDefaultMetrics": false
  },
  "Api": {
    "BaseUrl": "https://api.example.com",
    "CorsOrigins": ["https://app.example.com"],
    "Version": "v1",
    "EnableSwagger": false,
    "RequestTimeoutSeconds": 30,
    "MaxRequestBodySize": 10485760,
    "EnableDetailedErrors": false
  }
}
